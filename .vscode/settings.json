{
	"files.encoding": "utf8",
	"search.exclude": {
		"_bkp/": true,
		".logs/": true,
		".workdir/": true,
		"nbproject/": true,
		"attachments/*_*": true,
		"cache/": true,
	},
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/nbproject": true,
		"attachments/*_*": true,
		"**/.workdir": true,
	},
	// allow running sql with F5
	"files.associations": {
		"*.sql": "postgres" 
	},
	"vscode-postgres.defaultConnection": "local 10.0",
	// "vscode-postgres.defaultConnection": "molpl",
	"vscode-postgres.defaultDatabase": "bibz"
}