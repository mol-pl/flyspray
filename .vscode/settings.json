{
	"files.encoding": "utf8",
	"search.exclude": {
		"_bkp/": true,
		".logs/": true,
		".workdir/": true,
		"nbproject/": true,
		"attachments/*_*": true,
		"cache/": true,
		"plugins/dokuwiki/inc/geshi/": true,
	},
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/nbproject": true,
		"attachments/*_*": true,
		"**/.workdir": true,
	},
	// allow running sql with F5
	"files.associations": {
		"*.sql": "postgres" 
	},

	// less noise
	"intelephense.diagnostics.undefinedTypes": false,
	"intelephense.diagnostics.undefinedFunctions": true,
	"intelephense.diagnostics.undefinedConstants": false,
	"intelephense.diagnostics.undefinedClassConstants": false,
	"intelephense.diagnostics.undefinedMethods": false,
	"intelephense.diagnostics.undefinedProperties": false,
	"intelephense.diagnostics.undefinedVariables": true,
	"intelephense.diagnostics.deprecated": false,
	"intelephense.diagnostics.typeErrors": false,
	
	"vscode-postgres.defaultConnection": "local 10.0",
	// "vscode-postgres.defaultConnection": "molpl",
	"vscode-postgres.defaultDatabase": "rejsz"
}